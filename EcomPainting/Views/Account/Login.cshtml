@model LoginDto
@{
    Layout = "_Accountlayout";
}
<div class="card">
    <div class="card-header bg-primary text-light">
        Login
    </div>
    <div class="card-body">
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for=@Model.UserMail class="form-label"></label>
                <input class="form-control" asp-for=@Model.UserMail placeholder="name@example.com">
            </div>
            <div class="mb-3">
                <label asp-for=@Model.Password class="form-label"></label>
                <input type="password" class="form-control" asp-for=@Model.Password  placeholder="*******">
            </div>
            <div class="mb-3 text-end">
                <a class="btn btn-success" asp-action="Register">Register</a>
                <button class="btn btn-primary" type="submit">Login</button>
            </div>                       
        </form>   
        <div class="text-danger" asp-validation-summary="All"></div>
    </div>
</div>
