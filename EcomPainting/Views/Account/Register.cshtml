@model UserDto
@{
    Layout = "_Accountlayout";
}
<div class="card">
    <div class="card-header bg-primary text-light">
        Registration
    </div>
    <div class="card-body">
        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for=@Model.UserMail class="form-label"></label>
                <input class="form-control" asp-for=@Model.UserMail  placeholder="name@example.com">
            </div>
            <div class="mb-3">
                <label asp-for=@Model.UserName class="form-label"></label>
                <input class="form-control" asp-for=@Model.UserName  placeholder="User Name">
            </div>
            <div class="mb-3">
                <label asp-for=@Model.Password class="form-label"></label>
                <input type="password" class="form-control" asp-for=@Model.Password  placeholder="*******">
            </div>
            <div class="mb-3">
                <label asp-for=@Model.ConfirmPassword class="form-label"></label>
                <input type="password" class="form-control" asp-for=@Model.ConfirmPassword  placeholder="*******">
            </div>
            <div class="mb-3 text-end">
                <a class="btn btn-warning" asp-action="Login">Back</a>
                <button class="btn btn-success" type="submit">Register</button>
            </div>
        </form>      
        <div class="text-danger" asp-validation-summary="All"></div>
        @if (ViewBag.Status != null )
        {
            @if (ViewBag.Status)
            {
                <label class="text-success">User registered successfully.</label>
            }
            else
            {
                <label class="text-danger">User registered successfully.</label>
            }
        }
        
        
    </div>
</div>
