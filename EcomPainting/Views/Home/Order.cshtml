@model List<Order>
@{
}

<div class="container">
    <div class="card m-2">
        <div class="card-header bg-primary text-light">Your Orders</div>
        <div class="card-body">

            <div class="col">
                @if (Model.Count == 0)
                {
                    <div class="row">
                        <div class="col">
                            No records found
                        </div>                        
                    </div>
                }
                @foreach (var item in Model)
                {
                    <div class="row border-top border-bottom">
                        <div class="col-4">
                            <img class="img-fluid img-thumbnail" src=@Url.Content(item.Item.Url) style="max-height:100px" />
                        </div>
                        <div class="col-5">
                            <div class="row">
                                <h3>@item.Item.Name</h3>
                            </div>
                            <div class="row">
                                <p>@item.Item.Description</p>
                            </div>                            
                        </div>
                        <div class="col-3">
                            <h3>@item.Item.Price</h3>
                            <h6>@item.PlacedOn.ToShortDateString()</h6>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>

</div>