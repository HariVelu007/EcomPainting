@model List<Cart>
@{
}

<div class="container">
    <div class="card m-2">
        <div class="card-header bg-primary text-light">Your Cart</div>
        <div class="card-body">

            <div class="col">
                @foreach (var item in Model)
                {
                    <div class="row border-top border-bottom">
                        <div class="col-4">
                            <img class="img-fluid img-thumbnail" src=@Url.Content(item.Item.Url) style="max-height:100px"/>
                        </div>
                        <div class="col-5">
                            <div class="row my-2">
                                <h3>@item.Item.Name</h3>
                            </div>
                            <div class="row my-2">
                                <p>@item.Item.Description</p>
                            </div>
                        </div>
                        <div class="col-3 d-flex flex-column justify-content-between">
                            <div class="row my-2">
                                <h3>Rs @item.Item.Price</h3>
                            </div>
                            <div class="row my-2 ">                                
                                <a class="btn btn-primary" asp-action="Buy" asp-route-itemId="@item.Item.ID">Buy Now</a>
                            </div>
                            
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>

</div>
